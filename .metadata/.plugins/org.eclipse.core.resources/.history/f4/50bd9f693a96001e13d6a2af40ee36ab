package app;
import javax.swing.JFrame;
import java.awt.Graphics;
import java.awt.Point;
import java.util.LinkedList;

public class Muestra extends JFrame{
	
	private int di[] = {0,1,0,-1};
	private int dj[] = {1,0,-1,0};
	
	public Muestra() {		
		setSize(500,500);
		setLocationRelativeTo(null);
		setUndecorated(true);
		setVisible(true);
		iniciarAnimacion();
	}
	
	
	public void iniciarAnimacion() {
		
		while(true) {
			mostrarExpansion();
		}
	}
	
	
	public void mostrarExpansion(){
		Graphics g = this.getGraphics();
		int i = getWidth()/2;
		int j = getHeight()/2;
		LinkedList<Point> q = new LinkedList<>();
		
		q.push(new Point(i,j));
		int[][] matrix = new int[getWidth()][getHeight()];
		matrix[i][j] = 1;
		
		while(!q.isEmpty()) {
			Point p = q.poll();
			
			for(int k = 0; k < di.length ; k++) {
				int newI = p.x+di[k];
				int newJ = p.y+dj[k];
				
				if(newI < 0 || newI == getWidth() || newJ < 0 || newJ == getHeight() || matrix[newI][newJ] !=0 )continue;
				
				q.push(new Point(newI,newJ));
				matrix[newI][newJ] = matrix[p.x][p.y]+1;
				g.setColor(Color.blue);
				g.drawRect(newI, newJ, 1, 1);
			}
			
		}
	}
	
	public static void main(String[] args){
		new Muestra();
	}
}
