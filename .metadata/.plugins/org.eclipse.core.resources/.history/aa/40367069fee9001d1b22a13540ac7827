package gui;
import java.awt.Color;
import java.awt.Font;

import javax.swing.*;
public class SelectTypePanel extends JPanel{

	int ewidth,eheight;
	public SelectTypePanel(int w,int h) {
		setSize(w,h);
		ewidth=w/5;
		eheight=ewidth+(int)(ewidth*0.1);
		setLayout(null);
		setBackground(Color.LIGHT_GRAY);
		
		iniLabels();
		iniButtons();
	}
	
	private void iniButtons() {
		
	}
	
	private void iniLabels() {
		String texts[]= {"Basic Bike","EBike","MountainBike","Road Bike","Road EBike"};
		Font font = new Font("Arial",Font.BOLD,25);
		int x=0,y=(getHeight()/2)-(eheight/2)-(eheight/4);
		for(int i=0;i<texts.length;i++) {
			JLabel jl = new JLabel(texts[i]);
			jl.setSize(ewidth,eheight/2);
			jl.setFont(font);
			jl.setLocation(x,y);
			x+=jl.getWidth();
			add(jl);
		}
	}
	
	
	public static void main(String args[]) {
		JFrame fr = new JFrame();
		fr.setSize(800,500);
		fr.setDefaultCloseOperation(fr.EXIT_ON_CLOSE);
		fr.setVisible(true);
		fr.add(new SelectTypePanel(800,500));
		
	}
}
