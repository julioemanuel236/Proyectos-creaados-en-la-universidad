package App;

import javax.swing.*;

import algoritmos.*;

import java.util.PriorityQueue;
import java.awt.Color;
import java.awt.Graphics;
import java.util.LinkedList;
public class Ventana extends JFrame{

	PriorityQueue<Proceso> pqp = new PriorityQueue<>();
	LinkedList<Proceso> lsp = new LinkedList<>();
	ScrollPanel zone;
	ScrollPanel table;
	Ventana(){
		setLayout(null);
		setResizable(false);
		setSize(900,500);
		iniZone();
		iniTable();		
		iniButtons();
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setVisible(true);
	}
	
	private void iniButtons() {
		JComboBox<String> jcb = new JComboBox<>();
		jcb.setSize(150,50);
		jcb.setLocation(getWidth()-jcb.getWidth()-20,15);
		jcb.addItem("Prioridad Apropiativo");
		jcb.addItem("SJF");
		jcb.addItem("Round Robin");
		
		add(jcb);
	}
	
	private void iniTable() {
		table = new ScrollPanel(zone.getX(),getHeight()-20);
		table.border.show("all",false);
		table.back.setBackground(Color.white);
		table.setLocation(0,20);
		add(table);
	}
	
	private void iniZone() {
		zone= new ScrollPanel (getWidth()-200,getHeight()-120);	
		zone.border.show("all",Color.blue);
		zone.back.setBackground(Color.darkGray);		
		zone.hsb.inactive = Color.white;
		zone.setLocation(180,80);
		zone.setOpaque(true);
		zone.setBackground(Color.gray);
		add(zone);
		for(int i=0;i<5;i++) {
			JLabel jl = new JLabel();
			jl.setSize(25,25);
			jl.setText(""+i);
			jl.setLocation(25+(i*25),0);
			jl.setForeground(Color.white);
			zone.back.setSize(Math.max(zone.back.getWidth(), i*25),zone.back.getHeight());
			zone.back.add(jl);
		}
		
		for(int i=0;i<5;i++) {
			JLabel jl = new JLabel();
			jl.setSize(25,25);
			jl.setText(""+i);
			jl.setLocation(0,25+(i*25));
			jl.setForeground(Color.white);
			zone.back.setSize(Math.max(zone.back.getWidth(), i*25),zone.back.getHeight());
			zone.back.add(jl);
		}
			
	}
	
	public static void main(String args[]) {
		new Ventana();
	}
}
