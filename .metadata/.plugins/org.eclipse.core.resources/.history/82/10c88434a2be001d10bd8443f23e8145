package game;

public class Caballero extends Heroe {

	public Caballero(Tablero t) {
		super(300, 1, 45,1,t);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		int dx[]= {1,1,1,0,-1,-1,-1,0};
		int dy[]= {0,-1,-1,-1,0,1,1,1};

		for(int i=0;i<8;i++) {
			int x=getX()+dx[i];
			int y=getY()+dy[i];
			if(x<1||x>tablero.width||y<1||y>tablero.height)continue;
			if(tablero.map[x][y] instanceof Enemigo) {
				Enemigo e = (Enemigo)tablero.map[x][y];
				this.hit(e);
			}
		}
	}
	
	@Override
	public void hit(Mob m) {
		m.vida-=this.damage;
		if(m.vida<0)m.die();
	}

	@Override
	public void die() {
		
	}
	
	@Override
	public bool mover(int dir) {
		
	}
}
