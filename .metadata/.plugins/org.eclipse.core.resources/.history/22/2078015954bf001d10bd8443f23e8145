package game;

import java.util.Scanner;

public class Caballero extends Heroe {

	public Caballero() {
		super(300,45,1,false,'c');
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {		
		Tablero tablero = App.tablero;
		for(int i=0;i<8;i++) {
			int x=getX()+dx[i];
			int y=getY()+dy[i];
			if(x<0||x>=tablero.width||y<0||y>=tablero.height)continue;
			if(tablero.map[y][x] instanceof Entity) {
				this.hit((Entity)tablero.map[y][x]);
				((Entity)tablero.map[y][x]).die();
			}
		}
	}
	
	@Override
	public void die() {
		
	}

	
	public String inf() {
		return "Caballero "+super.info();
	}
	
	@Override
	public String shopping() {
		return "Caballero: "+super.shopping();
	}
	
}
