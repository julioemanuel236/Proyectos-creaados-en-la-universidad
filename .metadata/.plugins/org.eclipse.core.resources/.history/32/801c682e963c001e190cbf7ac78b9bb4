		for(int i=0 ; i<cantidadSerpientes; i++) {
			int x = rand.nextInt(size);
			while((tablero.get(x, y) != -1)) {
				x = rand.nextInt(size);
			}
			serpientes[i] = new Serpiente(x,y,i,serpientesSize,pasos,tablero);
		}
		
