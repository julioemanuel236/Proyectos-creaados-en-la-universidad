package Algoritmos;

import java.util.Comparator;
import java.util.PriorityQueue;

public class PrioridadApropiativo {

	PriorityQueue<Proceso> procesos;
	
	private Proceso inProcces;
	
	public PrioridadApropiativo() {
		procesos = new PriorityQueue<Proceso>(new Comparator() {

			@Override
			public int compare(Object o1, Object o2) {
				Proceso p1 = (Proceso) o1;
				Proceso p2 = (Proceso) o2;
				if(p1.getPriority()<p2.getPriority())return -1;
				else if(p1.getPriority()>p2.getPriority())return 1;
				return 0;
			}
			
		});
		inProcces=null;		
	}
	
	public void add(Proceso pr) {
		procesos.add(pr);
	}
	
	public Proceso procces() {
		if(inProcces == null || inProcces.isTerminated()) {
			if(procesos.isEmpty())return null;
			inProcces = procesos.poll();							
		}
		inProcces.procces();
		return inProcces;
	}
	
	public static void main(String args[]) {
		ShortesJobFirst sjf = new ShortesJobFirst();
		System.out.println();
		sjf.add(new Proceso(1,1,1));
		sjf.add(new Proceso(2,2,2));
		sjf.add(new Proceso(3,2,4));
		sjf.add(new Proceso(4,2,3));
		Proceso pr;
		int t=0;
		do {
			pr = sjf.procces();
			if(pr==null)break;
			System.err.println(t+" "+pr.getId());
			t++;
		}while(pr!=null);
	}
}
