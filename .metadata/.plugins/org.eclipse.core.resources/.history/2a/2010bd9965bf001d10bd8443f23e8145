package game;

import java.util.Scanner;

public class FlorCarnivora extends Enemigo {

	public FlorCarnivora() {
		super(250, 30, 0, false,'F');
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		Tablero tablero = App.tablero;
	
		int dir=0;
		int arr[]= {0,2,4,6};
		for(int i=1;i<4;i++) {
			boolean find=false;
			for(int j=1;j<3;j++) {
					
				int ax=getX()+(dx[arr[i]]*j);
				int ay=getY()+(dy[arr[i]]*j);
				
				if(tablero.map[ay][ax] instanceof Heroe
				  ||tablero.map[ay][ax] instanceof Arbol) {
					dir=i;
					break;
				}
			}
			if(find)break;
		}
		
		for(int j=0;j<4;j++) {
			int dir=j;
			for(int i=1;i<4;i++) {
				int ax=getX()+(dx[dir]*i);
				int ay=getY()+(dy[dir]*i);
				
				if(tablero.map[ay][ax] instanceof Entity) {
					if(i==1)((Entity)tablero.map[ay][ax]).die();
					else this.hit((Entity)tablero.map[ay][ax]);
				}
			}
		}
	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

}
