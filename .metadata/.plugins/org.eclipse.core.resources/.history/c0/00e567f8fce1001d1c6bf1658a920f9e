package App;

import java.util.Date;

public class Tablero implements java.io.Serializable{
	final String TIPOS[] = {"Ruteo","Tablero de Prueba Electrica"};
	private String codigo="";
	private int tipo=0;
	private String location1="";
	private String location2="";
	private Date last = new Date();
	private String linea="";
	
	public Tablero(String codigo,int tipo){
		super();
		this.codigo = codigo;
		this.tipo = tipo;
		last = new Date();
	}

	public String getCodigo() {
		return codigo;
	}

	public String getTipo() {
		return TIPOS[tipo];
	}
	
	public String toString() {
		return "Codigo: "+codigo+"\n"+"Tipo: "+getTipo();
	}
	
	public void enviarA(String env) {
		this.linea = env;
		this.location1=this.location2="";
	}
	
	public void setLocation(String location) {
		if(location1==null)this.location1=location;
		else this.location2=location;
		update();
	}

	public String getFecha() {
		return last.getDate()+"/"+last.getMonth()+"/"+last.getYear();
	}
	
	public String[] getDatos() {
		String datos[] = new String[9];
		datos[0] = this.codigo;
		datos[1] = this.getTipo();
		datos[2] = this.location1;
		datos[3] = (this.location1.equals("")?"X":"Q");
		datos[4] = this.linea;
		datos[5] = this.location2;
		datos[6] = (this.location2.equals("")?"X":"Q");
		datos[7] = this.linea;
		datos[8] = this.getFecha();
		return datos;
	}
	
	public void update() {
		this.last = new Date();
	}
}
