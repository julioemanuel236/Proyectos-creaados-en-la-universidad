package todolist;


public class PriQueueItem<T extends Comparable<T>> implements Comparable<PriQueueItem<T>> {
    private T element;
    private int priority;
    private int sequenceNumber;

    public PriQueueItem(T element, int sequenceNumber) {
        this.element = element;
        this.priority = 0;
        this.sequenceNumber = sequenceNumber;
    }

    public T getElement() {
        return element;
    }

    public void increasePriority() {
        priority++;
    }

    public void decreasePriority() {
        priority--;
    }

    @Override
    public int compareTo(PriQueueItem<T> other) {
        if (priority != other.priority) {
            return Integer.compare(priority, other.priority);
        } else {
            return Integer.compare(sequenceNumber, other.sequenceNumber);
        }
    }
}
