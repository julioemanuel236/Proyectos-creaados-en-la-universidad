package game;

import java.util.Scanner;

public class FlorCarnivora extends Enemigo {

	public FlorCarnivora(Tablero t) {
		super(250, 30, 0, false , t,'F');
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		int arr[]={0,2,4,6};
		for(int j=0;j<4;j++) {
			int dir=j;
			for(int i=1;i<4;i++) {
				int ax=getX()+dx[dir];
				int ay=getY()+dy[dir];
				
				if(tablero.map[ax][ay] instanceof Entity) {
					if(i==1)((Entity)tablero.map[ax][ay]).die();
					else this.hit((Entity)tablero.map[ax][ay]);
				}
			}
		}
	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

}
