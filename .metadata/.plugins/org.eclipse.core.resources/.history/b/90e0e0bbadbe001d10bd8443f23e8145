package game;
import java.util.Random;
import java.util.random.*;
public abstract class Heroe extends Mob {

	public Heroe(int vida, int damage,int mM,boolean volar,Tablero t) {
		super(vida, damage,mM,volar,t);
		// TODO Auto-generated constructor stub
	}	
	
	public String info() {
		return "Heroe "+super.info();
	}

	public boolean noHit() {
		Random rand = new Random();
		int n=1+ rand.nextInt()%100;
		return n>75;
	}
}
