package elementos.serpiente;

import elementos.Matriz;

public class Serpiente {

	private Cuerpo cabeza;
	private Cuerpo cola;
	private Matriz tablero;
	private int dir;
	
	/*
	 * direcciones
	 * arriba = 8
	 * derecha = 6
	 * izquierda = 4
	 * abajo = 2
	 */
	
	public Serpiente(int x,int y,int id,int size,int pasos,Matriz tablero) {
		this.tablero = tablero;
		this.cabeza = new Cuerpo(x,y,id,tablero);
		this.cola = this.cabeza;
		this.dir = 8;
		
	}
	
	public int getX() {
		return cabeza.getX();
	}
	
	public int getY() {
		return cabeza.getY();
	}
	
	public int getId() {
		return cabeza.getId();
	}
	
	public void move() {
		
	}
	
	private void agregarCuerpo() {
		
		int x = cola.getX();
		int y = cola.getY();
		int id = cola.getId();
		
		Cuerpo nuevo = new Cuerpo(x,y,id,tablero,cola);
		cola.setSiguiente(nuevo);
		cola = nuevo;
		
	}
	
}
