package game;

public class Bruja extends Enemigo {

	public Bruja() {
		super(150, 45, 3, true,'B');
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		Tablero tablero = App.tablero;
		int dir=0;
		for(int i=1;i<4;i++) {
			for(int j=1;j<3;j++) {
					
				int ax=getX()+(dx[i]*j);
				int ay=getY()+(dy[i]*j);
				
				if(tablero.map[ay][ax] instanceof Heroe
				  ||tablero.map[ay][ax] instanceof Arbol) {
					this.hit((Entity)tablero.map[ay][ax]);
					break;
				}
			}
		}
	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

}
