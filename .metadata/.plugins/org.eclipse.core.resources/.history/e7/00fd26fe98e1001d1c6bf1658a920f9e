package App;

import java.io.FileInputStream;
import java.io.ObjectInputStream;
import java.util.HashMap;

public class Historial {
	HashMap<String,Tablero> tableros = new HashMap<>();
	
	public Historial() {
		try {
			FileInputStream fis = new FileInputStream("almacen.alm");
			ObjectInputStream ois = new ObjectInputStream(fis);
			HashMap<String,Tablero> readObject = (HashMap<String,Tablero>)ois.readObject();
			tableros = readObject;
			ois.close();
			fis.close();	
		}
		catch(Exception e) {
			System.out.println("OCURRIO UN ERROR AL CARGAR EL HISTORIAL");
		}
	}
	
	public void add(Tablero t) {
		tableros.put(t.getCodigo(), t);
	}
	
	public void update(Tablero t) {
		tableros.put(t.getCodigo(), t);
	}
}
