package empresa_turistica;

import java.io.Serializable;

public class Carro implements Serializable{
	String chapa;
	Persona chofer;
	String tipo;
	int cantidadAsientos;
	int ocupados=0;
	
	Carro(String chapa,Persona chofer,int asientos,String tipo){
		this.chapa=chapa;
		this.chofer=chofer;
		this.cantidadAsientos=asientos;
		this.tipo=tipo;
	}
	Carro(){
		
	}
	
	Carro(Carro c){
		this.chapa=c.chapa;
		this.chofer=new Persona(c.chofer);
		this.tipo=c.tipo;
		this.cantidadAsientos=c.cantidadAsientos;
		this.ocupados=c.ocupados;
	}
	
	public String Reporte() {
		return "VEHICULO: \n\t"+"Chapa: "+chapa+"\n\tTipo: "+tipo+"\n\tCantidad de Asientos: "+cantidadAsientos+"\n"+chofer.Reporte();
	}
	
	public String toString() {
		return tipo+" "+chapa;
	}
}
