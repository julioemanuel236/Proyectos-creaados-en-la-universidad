package game;

public class Bruja extends Enemigo {

	public Bruja() {
		super(150, 45, 3, true,'B');
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		Tablero tablero = App.tablero;
		int dir=0;
		int arr[]= {0,2,4,6};
		for(int i=1;i<4;i++) {
			boolean find=false;
			for(int j=1;j<3;j++) {
					
				int ax=getX()+(dx[arr[i]]*j);
				int ay=getY()+(dy[arr[i]]*j);
				if(ax<0||ay<0||ax>tablero.width||ay>tablero.height)continue;
				if(tablero.map[ay][ax] instanceof Heroe
				  ||tablero.map[ay][ax] instanceof Arbol) {
					dir=i;
					break;
				}
			}
			if(find)break;
		}
		for(int i=0;i<3;i++) {
			int x=getX()+(dx[dir]*i);
			int y=getX()+(dx[dir]*i);
			if(tablero.map[y][x] instanceof Entity) {
				hit((Entity)tablero.map[y][x]);
				break;
			}
		}
	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

}
