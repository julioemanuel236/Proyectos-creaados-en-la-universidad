package objectsPackage;

import interfacePackage.ShapesInterface;

public class Cube implements ShapesInterface{
	private final double SIZE;
	private final double VOLUME;
	private final double BASEAREA;
	private final double TOTALAREA;
	
	public Cube(double size) {
		SIZE=size;
		BASEAREA=calcBaseArea();
		TOTALAREA=BASEAREA*6;
		VOLUME=BASEAREA*SIZE;
	}
	
	private double calcBaseArea() {
		return SIZE*SIZE;
	}

	@Override
	public double getArea() {
		return TOTALAREA;
	}

	@Override
	public double getVolume() {
		return VOLUME;
		
	}

	@Override
	public void displayArea() {
				
	}

	@Override
	public void displayVolume() {
		
	}
	
}
