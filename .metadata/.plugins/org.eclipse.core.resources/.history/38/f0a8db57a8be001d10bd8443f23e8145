package game;

import java.util.Scanner;

public class Mago extends Heroe {

	public Mago(Tablero t) {
		super(100, 60, 2, t);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		// TODO Auto-generated method stub

	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

	@Override
	public boolean mover() {
		int dir=0;
		Scanner cin = new Scanner(System.in);
		if(movimientos<1) {
			System.out.println("No te quedan movimientos en este turno\n");
			return false;
		}
		
		System.out.println("En que direccion deseas moverte\nU-arriba\nR-derecha\nD-abajo\nL-izquierda");
		char c=cin.next().charAt(0);
		
		switch(c) {
		 case 'U':dir=6;break;
		 case 'R':dir=0; break;
		 case 'D':dir=2; break;
		 case 'L':dir=4; break;
		}
		
		int x=getX()+dx[dir];
		int y=getY()+dy[dir];
		
		if(x<1||x>tablero.width||y<1||y>tablero.height)return false;
			
		moveTo(x,y);		
		
		return true;
	}

}
