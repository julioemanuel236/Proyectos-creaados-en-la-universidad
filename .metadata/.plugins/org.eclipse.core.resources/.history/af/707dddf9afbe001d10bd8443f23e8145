package game;

import java.util.Scanner;

public class Gargola extends Enemigo {

	public Gargola(Tablero t) {
		super(150, 100, 3, true, t);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		int arr[]= {0,2,4,6};
		
		for(int i=1;i<4;i++) {
			int dir=i;
			for(int j=1;j<3;j++) {
					
				int ax=getX()+dx[dir];
				int ay=getY()+dy[dir];
				
				if(tablero.map[ax][ay] instanceof Entity) {
					this.hit(tablero.map[ax][ay]);
					break;
				}
			}
		}

	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

}
