package game;

import java.util.Scanner;

public class Caballero extends Heroe {

	public Caballero(Tablero t) {
		super(300, 1, 45,1,t);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {		

		for(int i=0;i<8;i++) {
			int x=getX()+dx[i];
			int y=getY()+dy[i];
			if(x<1||x>tablero.width||y<1||y>tablero.height)continue;
			if(tablero.map[x][y] instanceof Enemigo) {
				Enemigo e = (Enemigo)tablero.map[x][y];
				this.hit(e);
			}
		}
	}
	
	@Override
	public void die() {
		
	}
	
	@Override
	public boolean mover() {
		int dir;
		Scanner cin = new Scanner(System.in);
		if(movimientos<1) {
			System.out.println("No te quedan movimientos en este turno\n");
			return false;
		}
		
		System.out.println("En que direccion deseas moverte\nU-arriba\nR-derecha\nD-abajo\nL-izquierda");
		char c=cin.next().charAt(0);
		switch(c) {
		 case 'U': break;
		 case 'R': break;
		 case 'D': break;
		 case 'L': break;
		}
		int x=getX()+dx[dir];
		int y=getY()+dy[dir];
		
		if(x<1||x>tablero.width||y<1||y>tablero.height||tablero.map[x][y]!=null)return false;
			
		moveTo(x,y);		
		
		return true;
	}
}
