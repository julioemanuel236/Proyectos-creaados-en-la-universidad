package aplicacion;

public class Astro extends Omnibus{
	private int diaSalida;
	private int horaSalida;
	private int cantidadAsientos;
	public Astro(String chapa, Persona chofer, String destino, float kM, int diaSalida, int horaSalida,
			int cantidadAsientos) {
		super(chapa, chofer, destino, kM);
		this.diaSalida = diaSalida;
		this.horaSalida = horaSalida;
		this.cantidadAsientos = cantidadAsientos;
	}
	public int getDiaSalida() {
		return diaSalida;
	}
	public int getHoraSalida() {
		return horaSalida;
	}
	public int getCantidadAsientos() {
		return cantidadAsientos;
	}
	
	
	
	
	
}
