package game;

import java.util.ArrayList;
import java.util.Scanner;

public class App {
	Scanner cin = new Scanner(System.in);
	String nombre;
	ArrayList<Heroe> heroes = new ArrayList<>();
	ArrayList<Heroe> hComprar = new ArrayList<>();
	ArrayList<Item> items = new ArrayList<>();
	Tablero tablero;
	int oro;
	Heroe ingame[] = new Heroe[2];
	int mainHero=0;
	
	class Tienda{
		
		static void abrir() {
			print("1-Comprar Heroe\n");
			print("2-Comprar Objeto\n");
			print("0-Salir\n");
			int op=entero();
		}
		
		static void comprarHeroe() {
			
		}
		
		static void comprarItem() {
			
		}
	}
	
	public App() {
		mainMenu();
	}
	
	public void mainMenu() {
		print("1-Jugar\n");
		print("2-Estadisticas\n");
		print("0-Salir\n");
		int op=entero();
		switch(op) {
			case 1:iniciarPartida();break;
			case 2: break;
			case 0: return;
		}
	}
	
	public void iniciarPartida() {
		if(heroes.isEmpty()) {
			//primera vez que se juega
			while(heroes.isEmpty()) {
				print("Para iniciar tu aventura obten un Heroe y algunos objetos");
				Tienda.abrir();
			}
		}
	}
	
	public static int entero() {
		while(true) {
			try {
				int n=cin.nextInt();
				return n;
			}
			catch(Exception e) {
				print("Opcion no valida\n");
			}
		}
	}
	
 	public static void print(String txt) {
		System.out.print(txt);
	}
	
	public static void main(String args[]) {
		new App();
	}

}
