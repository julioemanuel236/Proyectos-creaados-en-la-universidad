package App;

import java.util.Random;

import javax.annotation.processing.SupportedAnnotationTypes;
import javax.swing.JComboBox;

public class Almacen {
	
	Tablero tableros[] = new Tablero[50];
	Random rand = new Random();
	
	int nuevo=0;
	
	public Almacen() {
		
	}
	
	public void add(Tablero t) {
		tableros[nuevo]=t;
		t.setLocation(getLocation(nuevo));
		nuevo++;
	}
	
	public String getLocation(int n) {
		int p = (n%50)+1;
		String r = (p<10?"-0"+p:"-10");
		return "A0"+((50/n)+1)+r;
	}
	
	public void actualizarLoc(JComboBox<String> jcb) {
		jcb.removeAllItems();
	}
	
	public String disponibles() {
		int a=0,b=0,c=0;
		int t = tableros.length-nuevo+1;
		if(t==0)return "No hay";
		
		else if(t==1)return getLocation(nuevo);
		
		a = rand.nextInt(t);
		b = rand.nextInt(t);
		while(a==b)b = rand.nextInt(t);
		
		if(t==2)return getLocation(nuevo+a-1)+"\n"+
				       getLocation(nuevo+b-1);				   
		
		c = rand.nextInt(t);
		while(c==a||c==b)c = rand.nextInt(t);
		return getLocation(nuevo+a-1)+"\n"+
			   getLocation(nuevo+b-1)+"\n"+
			   getLocation(nuevo+c-1);
	}
}
