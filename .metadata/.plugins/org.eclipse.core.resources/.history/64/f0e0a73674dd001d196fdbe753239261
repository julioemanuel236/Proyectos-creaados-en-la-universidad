package registroProveedores;

import java.util.Scanner;

public class Metodos {

    Scanner leer = new Scanner(System.in);
    String[][] proveedores;
    String[][] productos;
    int f, fProductos;
    String id, idProveedores, idProductos, buscar;

    public int pedirTamañoProveedores(int f) {
        this.f = f;
        System.out.println("Ingrese cuantos proveedores quiere ingresar");
        f = leer.nextInt();
        proveedores = new String[f][2];
        return f;
    }

    public void ingresarProveedores(String[][] proveedores) {
        this.proveedores = proveedores;
        System.out.println("Ingrese ID de su proveedor 1");
        proveedores[0][0] = leer.next();
        System.out.println("Ingrese nombre de su proveedor 1");
        proveedores[0][1] = leer.next();
        for (int i = 1; i < proveedores.length; i++) {
            System.out.println("Ingrese ID de su proveedor " + (i + 1));
            idProveedores = leer.next();
            if (comprobarID(proveedores, idProveedores) == false) {
                proveedores[i][0] = idProveedores;
                System.out.println("Ingrese nombre del proveedor " + (i + 1));
                proveedores[i][1] = leer.next();
            } else {
                System.out.println("La ID ingresada ya existe, digite otra ID porfavor");
                i -= 1;
            }
        }
    }

    public boolean comprobarID(String[][] proveedores, String idProveedores) {
        this.idProveedores = idProveedores;
        for (int i = 0; i < proveedores.length; i++) {
            if (proveedores[i][0] != null) {
                if (proveedores[i][0].equals(idProveedores)) {
                    return true;
                }
            }
        }
        return false;
    }

    public void ingresarProductos(int fProductos, String id, String[][] productos, String idProductos) {
        this.id = id;
        this.productos = productos;
        this.idProductos = idProductos;
        System.out.println("\n¿Cuántos productos quiere ingresar?");
        fProductos = leer.nextInt();
        productos = new String[fProductos][5];
        for (int i = 0; i < productos.length; i++) {
            System.out.println("\nIngrese id del proveedor: ");
            id = leer.next();
            if (comprobarSiExisteProveedor(proveedores, id) == true) {
                int aux = i;
                productos[aux][0] = id;
                System.out.println("Ingrese ID del producto: ");
                idProductos = leer.next();
                if (comprobarIDProductos(idProductos, productos) == false) {
                    productos[i][1] = idProductos;
                    System.out.println("Ingrese nombre de su producto: ");
                    productos[aux][2] = leer.next();
                    System.out.println("Ingrese precio del producto: ");
                    productos[aux][3] = leer.next();
                    System.out.println("Ingrese cantidad del producto: ");
                    productos[aux][4] = leer.next();
                } else {
                    System.out.println("\nLa ID ingresada ya existe en un producto, ingrese otra");
                    i -= 1;
                }
            } else {
                System.out.println("\nLa id ingresada no es de ningún proveedor");
                System.out.println("Ingrese la ID de nuevo");
                i -= 1;
            }
        }
    }

    public boolean comprobarIDProductos(String idProductos, String[][] productos) {
        this.idProductos = idProductos;
        for (int i = 0; i < proveedores.length; i++) {
            if (productos[i][1] != null) {
                if (idProductos.equals(productos[i][1])) {
                    return true;
                }
            }
        }
        return false;
    }

    public boolean comprobarSiExisteProveedor(String[][] proveedores, String id) {
        this.proveedores = proveedores;
        for (int i = 0; i < proveedores.length; i++) {
            if (proveedores[i][0].equals(id)) {
                return true;
            }
        }
        return false;
    }

    public void mostrarProductos(String[][] productos) {
        this.productos = productos;
    }

    public void mostrarProveedores(String[][] proveedores) {
        this.proveedores = proveedores;
        for (String[] proveedore : proveedores) {
            for (int j = 0; j < 2; j++) {
                System.out.print(proveedore[j] + " ");
            }
            System.out.println("");
        }
    }

    public void buscarProveedor(String[][] proveedores) {
        this.proveedores = proveedores;
        System.out.println("Ingrese la ID del proveedor a buscar");
        String buscar = leer.next();
        for (int i = 0; i < proveedores.length; i++) {
            if (buscar.equals(proveedores[i][0])) {
                System.out.println("\nSe encontró su proveedor en la posición " + (i + 1));
            } else {
                System.out.println("\nSu proveedor no está en la posición " + (i + 1));
            }
        }
    }

    public void buscarProductos(String[][] productos, String IDProductos) {
        this.productos = productos;
        this.buscar = IDProductos;
        System.out.println("Ingrese la ID del producto a buscar");
        buscar = leer.next();
        for (int i = 0; i < productos.length; i++) {
        	for (int j = 0; j < productos[i].length; j++) {
                System.out.print(productos[i][j] +" ");
            }
            if (buscar.equalsIgnoreCase(productos[i][1])) {
            /*    System.out.println("");
                System.out.println("Su producto ha sido encontrado en la posición " + (i + 1));
                for (int j = 0; j < productos[i].length; j++) {
                    System.out.print(productos[i][j] + "");
                }*/
            }
        }
    }
}