package game;

import java.util.Scanner;

public class Gigante extends Heroe {

	public Gigante(Tablero t) {
		super(350, 56, 1, false, t,'g');
		// TODO Auto-generated constructor stub
	}

	@Override
	public void atacar() {
		int dir=0;
		
		Scanner cin = new Scanner(System.in);
		System.out.println("En que direccion deseas atacar\nU-arriba\nR-derecha\nD-abajo\nL-izquierda");
		char c=cin.next().charAt(0);
		
		switch(c) {
		 case 'U':dir=6;break;
		 case 'R':dir=0; break;
		 case 'D':dir=2; break;
		 case 'L':dir=4; break;
		}
		
		for(int i=1;i<4;i++) {
			int ax=getX()+dx[dir];
			int ay=getY()+dy[dir];
			
			if(tablero.map[ay][ax] instanceof Entity) {
				this.hit((Entity)tablero.map[ay][ax]);
			}
		}

	}

	@Override
	public void die() {
		// TODO Auto-generated method stub

	}

}
